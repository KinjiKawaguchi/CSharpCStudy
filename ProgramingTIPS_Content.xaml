<Page x:Class="CStudy.ProgramingTIPS_Content"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CStudy"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="White"
      Title="Page2">
    <Grid>
        <Image Source="./TIPSbook.jpg" Stretch="fill" Opacity="0.5">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/TIPSbook.jpg"/>
            </Image.OpacityMask>
        </Image>
        <Border BorderBrush="Black" Background="#FFBD62FF"  BorderThickness="1" HorizontalAlignment="Center" Height="180" VerticalAlignment="Top" Width="1920">
            <Label x:Name="Label_ProgramingTIPS_Title" Content="ProgrammingTIPS Title" FontSize="80" HorizontalAlignment="Left" Height="180" Margin="9,0,0,0" VerticalAlignment="Center" Width="884"/>

        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="765" Margin="0,185,0,0" VerticalAlignment="Top" Width="1920">
            <ScrollViewer x:Name="TextBlock_" Width="1920">
                <TextBlock x:Name="TextBlock_ProgramingTIPS_Content" TextWrapping="Wrap" Width="1920" FontFamily="Yu Gothic UI" FontSize="28" />
                
                
            </ScrollViewer>

        </Border>
        <Button x:Name="Button_Navi_Back" Content="前のノート" Background="#FFBD62FF" FontSize="40" HorizontalAlignment="Left" Height="130" Margin="0,950,0,0" VerticalAlignment="Top" Width="324" Cursor="Hand" Click="Button_Navi_Other_Click"/>
        <Button x:Name="Button_Navi_TOC" Content="目次" Background="#FFBD62FF" FontSize="40" HorizontalAlignment="Center" Height="130" Margin="0,950,0,0" VerticalAlignment="Top" Width="324" Cursor="Hand" Click="Button_Navi_TOC_Click"/>
        <Button x:Name="Button_Navi_Next" Content="次のノート" Background="#FFBD62FF" FontSize="40" HorizontalAlignment="Left" Height="130" Margin="1596,950,0,0" VerticalAlignment="Top" Width="324" Cursor="Hand" Click="Button_Navi_Other_Click"/>
    </Grid>
</Page>